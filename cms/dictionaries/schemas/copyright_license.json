{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gabl.ink/cms/dictionaries/schemas/copyright_license.json",
  "$comment": "SPDX-License-Identifier: CC0-1.0",
  "title": "Copyright licenses",
  "description": "Copyright licenses",
  "type": "object",
  "patternProperties": {
    "^[a-z0-9\\._-]+$": {
      "type": "object",
      "description": "ID",
      "properties": {
        "spdx": {
          "type": "string",
          "pattern": "^[A-Za-z0-9.+-]+$"
        },
        "title": {
          "type": "object",
          "description": "Title",
          "patternProperties": {
            "^[a-z]{2,3}(-([A-Z]{2}|[0-9]{3}))?$": {
              "type": "string"
            }
          }
        },
        "abbr": {
          "type": "object",
          "description": "Abbreviation",
          "patternProperties": {
            "^[a-z]{2,3}(-([A-Z]{2}|[0-9]{3}))?$": {
              "type": "string"
            }
          }
        },
        "url": {
          "type": "object",
          "description": "Uniform Resource Locator (URL)",
          "patternProperties": {
            "^[a-z]{2,3}(-([A-Z]{2}|[0-9]{3}))?$": {
              "type": "string",
              "pattern": "^.+://[a-z0-9.-]+/.*$"
            }
          }
        }
      },
      "required": [
        "title"
      ]
    }
  }
}
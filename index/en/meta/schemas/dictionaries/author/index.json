{
  "$id":"https://gabl.ink/index/en/meta/schemas/dictionaries/author/index.json",
  "$schema":"https://json-schema.org/draft/2020-12/schema",
  "$comment":"SPDX-License-Identifier: CC0-1.0",
  "title":"gabl.ink author JSON schema",
  "description":"JSON schema for author information on gabl.ink",
  "type":"object",
  "properties":{
    "name":{
      "description":"[object] names",
      "type":"object",
      "properties":{
        "given":{
          "description":"[object] given (first and middle) names",
          "type":"object",
          "properties":{
            "text":{
              "description":"[array] given (first and middle) names in plaintext",
              "type":"array",
              "items":{
                "type":"string",
                "pattern":".+"
              },
              "uniqueItems":true
            }
          },
          "required":[
            "text"
          ]
        }
      },
      "required":[
        "given"
      ]
    }
  },
  "required":[
    "name"
  ]
}

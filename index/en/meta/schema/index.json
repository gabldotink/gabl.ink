{
  "$id":"https://gabl.ink/index/en/schema/index.json",
  "$schema":"https://json-schema.org/draft/2020-12/schema",
  "title":"gabl.ink content JSON schema",
  "description":"schema for gabl.ink content JSON files",
  "type":"object",
  "properties":{
    "id":{
      "description":"[object] identifiers (IDs) of the item",
      "type":"object",
      "properties":{
        "full":{
          "description":"[string] full identifier (ID) of the item",
          "type":"string",
          "minLength":2,
          "pattern":"^[a-z][a-z0-9-]+(/[a-z0-9_-])*$"
        },
        "parent":{
          "description":"[string/null] full identifier (ID) of the item’s parent,\nor null for a root-level ID",
          "type":[
            "string",
            "null"
          ],
          "minLength":2,
          "pattern":"^[a-z][a-z0-9-]+(/[a-z0-9_-])*$"
        },
        "base":{
          "description":"[string] part of the item’s identifier (ID) after the last slash,\nor same as the full ID for a root-level ID",
          "type":"string",
          "minLength":1,
          "pattern":"^[a-z0-9_-]+$"
        },
        "child":{
          "description":"[string(s)/null] base identifiers (IDs)\nof items that are children to the item",
          "type":[
            "string",
            "array",
            "null"
          ],
          "items":{
            "type":"string"
          }
        },
        "required":[
          "full",
          "parent",
          "base",
          "child"
        ]
      }
    },
    "content":{
      "description":"[string] content type for the item",
      "type":"string",
      "minLength":1,
      "pattern":".+"
    },
    "language":{
      "description":"[string] primary IETF BCP 47 language code of the item",
      "type":"string",
      "minLength":2,
      "pattern":"^[a-z][a-z0-9-]+$"
    },
    "title":{
      "description":"[objects] title of the item",
      "type":"object",
      "properties":{
        "text":{
          "description":"[string] title of the item in plaintext",
          "type":"string",
          "minLength":1,
          "pattern":".+"
        },
        "ipa":{
          "description":"[string] title of the item in IPA symbols",
          "type":"string",
          "minLength":1,
          "pattern":".+"
        }
      },
      "required":[
        "text",
        "pronunciation"
      ]
    },
    "date":{
      "description":"[objects] calendar dates of the item (UTC)",
      "type":"object",
      "properties":{
        "published":{
          "description":"[object] calendar date of the item’s first publication (UTC)",
          "type":"object",
          "properties":{
            "year":{
              "description":"[integer] year of the item’s first publication (UTC),\nfrom 2022 to 9999",
              "type":"integer",
              "minimum":2022,
              "maximum":9999
            },
            "month":{
              "description":"[integer] number of the month of the item’s first publication (UTC)",
              "type":"integer",
              "minimum":1,
              "maximum":12
            },
            "day":{
              "description":"[integer] day of the month of the item’s first publication (UTC)",
              "type":"integer",
              "minimum":1,
              "maximum":31
            },
            "full":{
              "description":"[string] RFC 3339 date of the item’s first publication (UTC),\nfrom 2022-04-01 to 9999-12-31",
              "type":"string",
              "format":"date",
              "minimum":10,
              "maximum":10,
              "pattern":"^[2-9][0-9]{3}-([1-9]|[12][012])-([1-9]|[12][0-9]|3[01])$"
            }
          },
          "required":[
            "year",
            "month",
            "day",
            "full"
          ]
        },
        "updated":{
          "description":"[object] calendar date of the item’s last update (UTC)",
          "type":"object",
          "properties":{
            "epoch":{
              "description":"[integer] Unix time epoch of the item’s latest update (UTC),\nfrom 1720742400 to 253402300800",
              "type":"integer",
              "minimum":1720742400,
              "maximum":253402300800
            "year":{
              "description":"[integer] year of the item’s latest update (UTC),\nfrom 2024 to 9999",
              "type":"integer",
              "minimum":2024,
              "maximum":9999
            },
            "month":{
              "description":"[integer] number of the month of the item’s latest update (UTC)",
              "type":"integer",
              "minimum":1,
              "maximum":12
            },
            "day":{
              "description":"[integer] day of the month of the item’s latest update (UTC)",
              "type":"integer",
              "minimum":1,
              "maximum":31
            },
            "hour":{
              "description":"[integer] hour of the day of the items latest update (UTC)",
              "type":"integer",
              "minimum":0,
              "maximum":23
            },
            "minute":{
              "description":"[integer] minute of the hour of the items latest update (UTC)",
              "type":"integer",
              "minimum":0,
              "maximum":59
            },
            "second":{
              "description":"[integer] second of the minute of the items latest update (UTC)",
              "type":"integer",
              "minimum":0,
              "maximum":60
            },
            "full":{
              "description":"[string] RFC 3339 date and time of the item’s latest update (UTC),\nfrom 2024-07-12T00:00:00+00:00 to 9999-12-31T23:59:60+00:00",
              "type":"string",
              "format":"date-time",
              "minLength":25,
              "maxLength":25,
              "pattern":"^[2-9][0-9]{3}-([1-9]|[12][012])-([1-9]|[12][0-9]|3[01])T([01][0-9]|2[0-3]):[0-5][0-9]:([0-5][0-9]|60)\\+00:00$"
            }
          },
          "required":[
            "epoch",
            "year",
            "month",
            "day",
            "hour",
            "minute",
            "second",
            "full"
          ]
        },
        "required":[
          "published",
          "updated"
        ]
      }
    },
    "author":{
      "description":"[string(s)] the creator(s) of the item",
      "type":[
        "string",
        "array"
      ],
      "items":{
        "type":"string"
      },
      "minLength":1,
      "pattern":".+",
      "uniqueItems":true
    },
    "format":{
      "description":"[object] avilable file format(s) of the item\n(filename extension, no dot)",
      "type":"object",
      "properties":{
        "image":{
          "description":"[string(s)] available image file format(s) of the item\n(filename extension, no dot)",
          "type":[
            "string",
            "array",
            "null"
          ],
          "items":{
            "type":"string"
          },
          "minLength":1,
          "maxLength":121,
          "pattern":"^[A-Za-z0-9._-]{1,121}$",
          "uniqueItems":true
        },
        "info":{
          "description":"[string(s)] available data file format(s) of the item\n(filename extension, no dot)",
          "type":[
            "string",
            "array",
            "null"
          ],
          "items":{
            "type":"string"
          },
          "minLength":1,
          "maxLength":122,
          "pattern":"^[A-Za-z0-9._-]{1,122}$",
          "uniqueItems":true
        },
        "required":[
          "image",
          "info"
        ]
      },
      "license":{
        "description":"[string(s)] SPDX license identifier(s) for the item",
        "type":[
          "string",
          "array"
        ],
        "items":{
          "type":"string"
        },
        "minLength":1,
        "pattern":"^[A-Za-z0-9.+-]+$",
        "uniqueItems":true
      }
    }
  },
  "required":[
    "id",
    "content",
    "language",
    "title",
    "date",
    "author",
    "format",
    "license"
  ]
}

{
  "$id":"https://gabl.ink/index/en/schema/index.json",
  "$schema":"https://json-schema.org/draft/2020-12/schema",
  "$comment":"SPDX-License-Identifier: CC0-1.0",
  "title":"gabl.ink content JSON schema",
  "description":"schema for gabl.ink content JSON files",
  "type":"object",
  "properties":{
    "id":{
      "description":"[named objects] identifiers (IDs)",
      "type":"object",
      "properties":{
        "full":{
          "description":"[string] full identifier (ID)",
          "type":"string",
          "minLength":2,
          "pattern":"^[a-z][a-z0-9-]+(/[a-z0-9-])*$"
        },
        "parent":{
          "description":"[string/null] full identifier (ID) of parent, or null for a root-level ID",
          "type":[
            "string",
            "null"
          ],
          "minLength":2,
          "pattern":"^[a-z][a-z0-9-]+(/[a-z0-9-])*$"
        },
        "base":{
          "description":"[string] part of identifier (ID) after the last slash, or same as the full ID for a root-level ID",
          "type":"string",
          "minLength":1,
          "pattern":"^[a-z0-9-]+$"
        },
        "child":{
          "description":"[string(s)/null] base identifier(s) (IDs) of child items",
          "type":[
            "string",
            "array",
            "null"
          ],
          "items":{
            "type":"string",
            "pattern":"^[a-z0-9-]+$"
          },
          "pattern":"^[a-z0-9-]+$"
        },
        "alternate":{
          "description":"[string(s)/null] full identifier(s) (IDs) of alternate versions",
          "type":[
            "string",
            "array",
            "null"
          ],
          "items":{
            "type":"string"
          },
          "pattern":"^[a-z][a-z0-9-]+(/[a-z0-9-])*$"
        },
        "required":[
          "full",
          "parent",
          "base",
          "child",
          "alternate"
        ]
      }
    },
    "content":{
      "description":"[string] content type of the item",
      "type":"string",
      "minLength":1,
      "pattern":".+"
    },
    "language":{
      "description":"[object] primary IETF BCP 47 language code",
      "type":"object",
      "properties":{
        "language":{
          "description":"[string/null] primary ISO 639 or extension language tag (two letters if possible, or three otherwise, or null if full language code is entirely private-use tags)",
          "type":[
            "string",
            "null"
          ],
          "minLength":2,
          "maxLength":3,
          "pattern":"^[a-z]{2,3}$"
        },
        "script":{
          "description":"[string/null] primary ISO 15924 or extension script tag (null if irrelevant or not present in full language code)",
          "type":[
            "string",
            "null"
          ],
          "minLength":4,
          "maxLength":4,
          "pattern":"^[A-Z][a-z]{3}$"
        },
        "region":{
          "description":"[string/null] primary ISO 3166 or extension region tag (two letters if possible, or three digits otherwise, or null if irrelevant or not present in full language code)",
          "type":[
            "string",
            "null"
          ],
          "minLength":2,
          "maxLength":3,
          "$comment":"There are currently no numeric language codes beginning with “9,” but I’m not sure if that’s explicitly reserved or anything.",
          "pattern":"^[A-Z]{2}|[0-9]{3}$"
        },
        "private":{
          "description":"[string/null] primary private-use tag (no “x-,” multiple tags if needed, or null if not present in full language code)",
          "type":[
            "string",
            "null"
          ],
          "minLength":1,
          "pattern":"^[a-z0-9][a-z0-9-]+$"
        }
      },
      "required":[
        "language",
        "script",
        "region",
        "private"
      ]
    },
    "title":{
      "description":"[named objects] title",
      "type":"object",
      "properties":{
        "text":{
          "description":"[string] title in plaintext",
          "type":"string",
          "minLength":1,
          "pattern":".+"
        },
        "ipa":{
          "description":"[string] title in IPA",
          "type":"string",
          "minLength":1,
          "pattern":".+"
        },
        "sampa":{
          "description":"[string/null] title in SAMPA (null if not possible)",
          "type":[
            "string",
            "null"
          ],
          "minLength":1,
          "pattern":".+"
        },
        "x-sampa":{
          "description":"[string] title in X-SAMPA",
          "type":"string",
          "minLength":1,
          "pattern":".+"
        }
      },
      "required":[
        "text",
        "ipa",
        "sampa",
        "x-sampa"
      ]
    },
    "date":{
      "description":"[named objects] calendar dates (UTC)",
      "type":"object",
      "properties":{
        "published":{
          "description":"[object] calendar date of first publication (UTC)",
          "type":"object",
          "properties":{
            "year":{
              "description":"[integer] year of first publication (UTC), from 2022 to 9999",
              "type":"integer",
              "minimum":2022,
              "maximum":9999
            },
            "month":{
              "description":"[integer] number of the month of first publication (UTC)",
              "type":"integer",
              "minimum":1,
              "maximum":12
            },
            "day":{
              "description":"[integer] day of the month of first publication (UTC)",
              "type":"integer",
              "minimum":1,
              "maximum":31
            },
            "full":{
              "description":"[string] RFC 3339 date of first publication (UTC), from 2022-04-01 to 9999-12-31",
              "type":"string",
              "format":"date",
              "minimum":10,
              "maximum":10,
              "pattern":"^[2-9][0-9]{3}-([1-9]|[12][012])-([1-9]|[12][0-9]|3[01])$"
            }
          },
          "required":[
            "year",
            "month",
            "day",
            "full"
          ]
        },
        "updated":{
          "description":"[object] calendar date of latest update (UTC)",
          "type":"object",
          "properties":{
            "epoch":{
              "description":"[integer] Unix time epoch of latest update (UTC), from 1720742400 to 253402300800",
              "type":"integer",
              "minimum":1720742400,
              "maximum":253402300800
            },
            "year":{
              "description":"[integer] year of latest update (UTC), from 2024 to 9999",
              "type":"integer",
              "minimum":2024,
              "maximum":9999
            },
            "month":{
              "description":"[integer] number of the month of latest update (UTC)",
              "type":"integer",
              "minimum":1,
              "maximum":12
            },
            "day":{
              "description":"[integer] day of the month of latest update (UTC)",
              "type":"integer",
              "minimum":1,
              "maximum":31
            },
            "hour":{
              "description":"[integer] hour of the day of latest update (UTC)",
              "type":"integer",
              "minimum":0,
              "maximum":23
            },
            "minute":{
              "description":"[integer] minute of the hour of latest update (UTC)",
              "type":"integer",
              "minimum":0,
              "maximum":59
            },
            "second":{
              "description":"[integer] second of the minute of latest update (UTC)",
              "type":"integer",
              "minimum":0,
              "maximum":60
            },
            "full":{
              "description":"[string] RFC 3339 date and time of latest update (UTC), from 2024-07-12T00:00:00+00:00 to 9999-12-31T23:59:60+00:00",
              "type":"string",
              "format":"date-time",
              "minLength":25,
              "maxLength":25,
              "pattern":"^[2-9][0-9]{3}-([1-9]|[12][012])-([1-9]|[12][0-9]|3[01])T([01][0-9]|2[0-3]):[0-5][0-9]:([0-5][0-9]|60)\\+00:00$"
            }
          },
          "required":[
            "epoch",
            "year",
            "month",
            "day",
            "hour",
            "minute",
            "second",
            "full"
          ]
        },
        "required":[
          "published",
          "updated"
        ]
      }
    },
    "author":{
      "description":"[string(s)] creator(s)",
      "type":[
        "string",
        "array"
      ],
      "items":{
        "type":"string",
        "minLength":1,
        "pattern":".+"
      },
      "minLength":1,
      "pattern":".+",
      "uniqueItems":true
    },
    "format":{
      "description":"[object] avilable file format(s) (filename extension, no dot)",
      "type":"object",
      "properties":{
        "image":{
          "description":"[string(s)/null] available image file format(s) (filename extension, no dot)",
          "type":[
            "string",
            "array",
            "null"
          ],
          "items":{
            "type":"string",
            "minLength":1,
            "maxLength":121,
            "pattern":"^[A-Za-z0-9._-]{1,121}$"
          },
          "minLength":1,
          "maxLength":121,
          "pattern":"^[A-Za-z0-9._-]{1,121}$",
          "uniqueItems":true
        },
        "info":{
          "description":"[string(s)] available data file format(s) (filename extension, no dot)",
          "type":[
            "string",
            "array"
          ],
          "items":{
            "type":"string",
            "minLength":1,
            "maxLength":122,
            "pattern":"^[A-Za-z0-9._-]{1,122}$"
          },
          "minLength":1,
          "maxLength":122,
          "pattern":"^[A-Za-z0-9._-]{1,122}$",
          "uniqueItems":true
        },
        "required":[
          "image",
          "info"
        ]
      },
      "license":{
        "description":"[string(s)] SPDX license identifier(s)",
        "type":[
          "string",
          "array"
        ],
        "items":{
          "type":"string",
          "minLength":1,
          "pattern":"^[A-Za-z0-9.+-]+$"
        },
        "minLength":1,
        "pattern":"^[A-Za-z0-9.+-]+$",
        "uniqueItems":true
      }
    }
  },
  "required":[
    "id",
    "content",
    "language",
    "title",
    "date",
    "author",
    "format",
    "license"
  ]
}
